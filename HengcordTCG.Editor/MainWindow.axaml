<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="HengcordTCG.Editor.MainWindow"
        Title="HengcordTCG Card Generator"
        Width="900" Height="700">
    <Grid RowDefinitions="*, Auto" Margin="10">
        <Grid Grid.Row="0" ColumnDefinitions="*, 400" Margin="10">
            <!-- Preview Area -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="0,0,10,0" Background="#222">
                <Image x:Name="PreviewImage" Stretch="Uniform" />
            </Border>

            <!-- Controls Area -->
            <ScrollViewer Grid.Column="1">
                <StackPanel Spacing="15" Margin="0,0,10,0">
                    <TextBlock Text="Generator Kart HengcordTCG" FontSize="20" FontWeight="Bold" />
                    
                    <Border BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="0,0,0,5">
                        <TextBlock Text="Podstawowe Informacje" FontWeight="SemiBold" />
                    </Border>
                    <StackPanel Spacing="5">
                        <TextBlock Text="Nazwa karty:" FontSize="12" />
                        <TextBox x:Name="CardNameInput" Text="Nowa Karta" />
                        <TextBlock Text="Rzadkość:" FontSize="12" Margin="0,5,0,0" />
                        <ComboBox x:Name="RarityInput" HorizontalAlignment="Stretch">
                            <ComboBoxItem Content="Common" IsSelected="True" />
                            <ComboBoxItem Content="Rare" />
                            <ComboBoxItem Content="Legendary" />
                        </ComboBox>
                        <Grid ColumnDefinitions="*, *" Margin="0,5,0,0">
                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="Atak:" FontSize="12" />
                                <NumericUpDown x:Name="AttackInput" Value="10" />
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Obrona:" FontSize="12" />
                                <NumericUpDown x:Name="DefenseInput" Value="10" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <Border BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="0,10,0,5">
                        <TextBlock Text="Grafika (Art)" FontWeight="SemiBold" />
                    </Border>
                    <StackPanel Spacing="5">
                        <Button x:Name="SelectArtButton" Content="Wybierz plik Arta..." HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Click="OnSelectArtClicked" />
                        <TextBlock x:Name="SelectedArtLabel" Text="Nie wybrano pliku (używa Placeholder)" FontSize="10" Foreground="Gray" TextWrapping="Wrap" />
                        <Grid ColumnDefinitions="*, *" Margin="0,5,0,0">
                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Text="Art X:" FontSize="11" />
                                <NumericUpDown x:Name="ArtXInput" Value="50" />
                                <TextBlock Text="Art Width:" FontSize="11" Margin="0,5,0,0" />
                                <NumericUpDown x:Name="ArtWInput" Value="400" />
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Art Y:" FontSize="11" />
                                <NumericUpDown x:Name="ArtYInput" Value="100" />
                                <TextBlock Text="Art Height:" FontSize="11" Margin="0,5,0,0" />
                                <NumericUpDown x:Name="ArtHInput" Value="300" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <Border BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="0,10,0,5">
                        <TextBlock Text="Pozycje Elementów" FontWeight="SemiBold" />
                    </Border>
                    <StackPanel Spacing="5">
                        <TextBlock Text="Nazwa (X, Y, Rozmiar):" FontSize="11" />
                        <Grid ColumnDefinitions="*, *, *">
                            <NumericUpDown x:Name="NameXInput" Grid.Column="0" Value="250" Margin="0,0,5,0" />
                            <NumericUpDown x:Name="NameYInput" Grid.Column="1" Value="50" Margin="0,0,5,0" />
                            <NumericUpDown x:Name="NameSizeInput" Grid.Column="2" Value="24" />
                        </Grid>
                        
                        <TextBlock Text="Atak (X, Y, Rozmiar):" FontSize="11" Margin="0,5,0,0" />
                        <Grid ColumnDefinitions="*, *, *">
                            <NumericUpDown x:Name="AtkXInput" Grid.Column="0" Value="100" Margin="0,0,5,0" />
                            <NumericUpDown x:Name="AtkYInput" Grid.Column="1" Value="420" Margin="0,0,5,0" />
                            <NumericUpDown x:Name="AtkSizeInput" Grid.Column="2" Value="32" />
                        </Grid>

                        <TextBlock Text="Obrona (X, Y, Rozmiar):" FontSize="11" Margin="0,5,0,0" />
                        <Grid ColumnDefinitions="*, *, *">
                            <NumericUpDown x:Name="DefXInput" Grid.Column="0" Value="350" Margin="0,0,5,0" />
                            <NumericUpDown x:Name="DefYInput" Grid.Column="1" Value="420" Margin="0,0,5,0" />
                            <NumericUpDown x:Name="DefSizeInput" Grid.Column="2" Value="32" />
                        </Grid>
                    </StackPanel>

                    <StackPanel Spacing="10" Margin="0,20,0,0">
                        <Button x:Name="GenerateButton" Content="Generuj Preview" HorizontalAlignment="Stretch" 
                                HorizontalContentAlignment="Center" Background="DodgerBlue" Foreground="White" />
                        <Button x:Name="SaveButton" Content="Zapisz jako PNG" HorizontalAlignment="Stretch" 
                                HorizontalContentAlignment="Center" IsEnabled="False" Click="OnSaveClicked" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="1" Background="#333" Padding="10,5">
            <TextBlock x:Name="StatusLabel" Text="Gotowy" FontSize="12" Foreground="LightGray" />
        </Border>
    </Grid>
</Window>

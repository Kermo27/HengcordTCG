@page "/showcase/navigation"
@layout _ShowcaseLayout

<PageTitle>Navigation - Showcase</PageTitle>

<div class="space-y-8">
    <div>
        <h1 class="text-3xl font-bold tracking-tight">Navigation</h1>
        <p class="text-muted-foreground mt-2">
            Tabs and collapsible sections for organizing content.
        </p>
    </div>

    <!-- Tabs -->
    <Card>
        <CardHeader>
            <CardTitle>Tabs</CardTitle>
            <CardDescription>Switch between different views or sections.</CardDescription>
        </CardHeader>
        <CardContent>
            <Tabs DefaultValue="account" class="w-full">
                <TabsList class="grid w-full grid-cols-3 max-w-md">
                    <TabsTrigger Value="account">Account</TabsTrigger>
                    <TabsTrigger Value="password">Password</TabsTrigger>
                    <TabsTrigger Value="settings">Settings</TabsTrigger>
                </TabsList>
                <TabsContent Value="account">
                    <Card>
                        <CardHeader>
                            <CardTitle>Account</CardTitle>
                            <CardDescription>
                                Make changes to your account here. Click save when you're done.
                            </CardDescription>
                        </CardHeader>
                        <CardContent class="space-y-4">
                            <div class="space-y-2">
                                <Label For="tab-name">Name</Label>
                                <Input id="tab-name" Value="John Doe" />
                            </div>
                            <div class="space-y-2">
                                <Label For="tab-email">Email</Label>
                                <Input id="tab-email" Type="InputType.Email" Value="john@example.com" />
                            </div>
                        </CardContent>
                        <CardFooter>
                            <Button>Save changes</Button>
                        </CardFooter>
                    </Card>
                </TabsContent>
                <TabsContent Value="password">
                    <Card>
                        <CardHeader>
                            <CardTitle>Password</CardTitle>
                            <CardDescription>
                                Change your password here. After saving, you'll be logged out.
                            </CardDescription>
                        </CardHeader>
                        <CardContent class="space-y-4">
                            <div class="space-y-2">
                                <Label For="current-password">Current password</Label>
                                <Input id="current-password" Type="InputType.Password" />
                            </div>
                            <div class="space-y-2">
                                <Label For="new-password">New password</Label>
                                <Input id="new-password" Type="InputType.Password" />
                            </div>
                        </CardContent>
                        <CardFooter>
                            <Button>Change password</Button>
                        </CardFooter>
                    </Card>
                </TabsContent>
                <TabsContent Value="settings">
                    <Card>
                        <CardHeader>
                            <CardTitle>Settings</CardTitle>
                            <CardDescription>
                                Manage your application settings and preferences.
                            </CardDescription>
                        </CardHeader>
                        <CardContent class="space-y-4">
                            <div class="flex items-center justify-between">
                                <div class="space-y-0.5">
                                    <Label>Dark mode</Label>
                                    <p class="text-sm text-muted-foreground">Enable dark mode theme.</p>
                                </div>
                                <Switch />
                            </div>
                            <Separator />
                            <div class="flex items-center justify-between">
                                <div class="space-y-0.5">
                                    <Label>Notifications</Label>
                                    <p class="text-sm text-muted-foreground">Receive email notifications.</p>
                                </div>
                                <Switch Checked="true" />
                            </div>
                        </CardContent>
                    </Card>
                </TabsContent>
            </Tabs>
        </CardContent>
    </Card>

    <!-- Collapsible -->
    <Card>
        <CardHeader>
            <CardTitle>Collapsible</CardTitle>
            <CardDescription>A section that can be expanded or collapsed.</CardDescription>
        </CardHeader>
        <CardContent>
            <Collapsible @bind-Open="collapsibleOpen" class="w-full max-w-lg space-y-2">
                <div class="flex items-center justify-between space-x-4 px-4">
                    <h4 class="text-sm font-semibold">
                        Recent repositories
                    </h4>
                    <CollapsibleTrigger>
                        <Button Variant="ButtonVariant.Ghost" Size="ButtonSize.Small" class="w-9 p-0">
                            <LucideIcon Name="chevrons-up-down" Size="16" />
                            <span class="sr-only">Toggle</span>
                        </Button>
                    </CollapsibleTrigger>
                </div>
                <div class="rounded-md border px-4 py-2 font-mono text-sm shadow-sm">
                    blazorblueprint/components
                </div>
                <CollapsibleContent class="space-y-2">
                    <div class="rounded-md border px-4 py-2 font-mono text-sm shadow-sm">
                        blazorblueprint/primitives
                    </div>
                    <div class="rounded-md border px-4 py-2 font-mono text-sm shadow-sm">
                        blazorblueprint/icons
                    </div>
                </CollapsibleContent>
            </Collapsible>
        </CardContent>
    </Card>

    <!-- Multiple Collapsibles -->
    <Card>
        <CardHeader>
            <CardTitle>FAQ Section</CardTitle>
            <CardDescription>Multiple collapsible sections for FAQ-style content.</CardDescription>
        </CardHeader>
        <CardContent class="space-y-2 max-w-lg">
            <Collapsible @bind-Open="faq1Open" class="border rounded-lg">
                <div class="flex items-center justify-between p-4">
                    <h4 class="text-sm font-semibold">What is BlazorBlueprint?</h4>
                    <CollapsibleTrigger>
                        <Button Variant="ButtonVariant.Ghost" Size="ButtonSize.Small" class="w-9 p-0">
                            <LucideIcon Name="@(faq1Open ? "chevron-up" : "chevron-down")" Size="16" />
                        </Button>
                    </CollapsibleTrigger>
                </div>
                <CollapsibleContent>
                    <div class="px-4 pb-4 text-sm text-muted-foreground">
                        BlazorBlueprint is a Blazor component library that provides 80+ pre-styled components
                        following the shadcn/ui design system. It includes both styled components and
                        headless primitives.
                    </div>
                </CollapsibleContent>
            </Collapsible>

            <Collapsible @bind-Open="faq2Open" class="border rounded-lg">
                <div class="flex items-center justify-between p-4">
                    <h4 class="text-sm font-semibold">How do I install it?</h4>
                    <CollapsibleTrigger>
                        <Button Variant="ButtonVariant.Ghost" Size="ButtonSize.Small" class="w-9 p-0">
                            <LucideIcon Name="@(faq2Open ? "chevron-up" : "chevron-down")" Size="16" />
                        </Button>
                    </CollapsibleTrigger>
                </div>
                <CollapsibleContent>
                    <div class="px-4 pb-4 text-sm text-muted-foreground">
                        You can install BlazorBlueprint via NuGet: <code class="bg-muted px-1 rounded">dotnet add package BlazorBlueprint.Components</code>.
                        Or create a new project with all packages pre-installed using the template.
                    </div>
                </CollapsibleContent>
            </Collapsible>

            <Collapsible @bind-Open="faq3Open" class="border rounded-lg">
                <div class="flex items-center justify-between p-4">
                    <h4 class="text-sm font-semibold">Can I customize the styling?</h4>
                    <CollapsibleTrigger>
                        <Button Variant="ButtonVariant.Ghost" Size="ButtonSize.Small" class="w-9 p-0">
                            <LucideIcon Name="@(faq3Open ? "chevron-up" : "chevron-down")" Size="16" />
                        </Button>
                    </CollapsibleTrigger>
                </div>
                <CollapsibleContent>
                    <div class="px-4 pb-4 text-sm text-muted-foreground">
                        Yes! BlazorBlueprint uses CSS variables for theming. You can customize colors,
                        spacing, and other design tokens by modifying the CSS variables in your theme file.
                    </div>
                </CollapsibleContent>
            </Collapsible>
        </CardContent>
    </Card>
</div>

@code {
    private bool collapsibleOpen;
    private bool faq1Open;
    private bool faq2Open;
    private bool faq3Open;
}

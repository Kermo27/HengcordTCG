@page "/showcase/buttons"
@layout _ShowcaseLayout

<PageTitle>Buttons - Showcase</PageTitle>

<div class="space-y-8">
    <div>
        <h1 class="text-3xl font-bold tracking-tight">Buttons</h1>
        <p class="text-muted-foreground mt-2">
            Displays a button or a component that looks like a button.
        </p>
    </div>

    <!-- Variants -->
    <Card>
        <CardHeader>
            <CardTitle>Variants</CardTitle>
            <CardDescription>Different button styles for various use cases.</CardDescription>
        </CardHeader>
        <CardContent>
            <div class="flex flex-wrap gap-4">
                <Button>Default</Button>
                <Button Variant="ButtonVariant.Secondary">Secondary</Button>
                <Button Variant="ButtonVariant.Outline">Outline</Button>
                <Button Variant="ButtonVariant.Ghost">Ghost</Button>
                <Button Variant="ButtonVariant.Link">Link</Button>
                <Button Variant="ButtonVariant.Destructive">Destructive</Button>
            </div>
        </CardContent>
    </Card>

    <!-- Sizes -->
    <Card>
        <CardHeader>
            <CardTitle>Sizes</CardTitle>
            <CardDescription>Buttons come in different sizes.</CardDescription>
        </CardHeader>
        <CardContent>
            <div class="flex flex-wrap items-center gap-4">
                <Button Size="ButtonSize.Small">Small</Button>
                <Button Size="ButtonSize.Default">Default</Button>
                <Button Size="ButtonSize.Large">Large</Button>
                <Button Size="ButtonSize.Icon">
                    <LucideIcon Name="plus" Size="16" />
                </Button>
            </div>
        </CardContent>
    </Card>

    <!-- With Icons -->
    <Card>
        <CardHeader>
            <CardTitle>With Icons</CardTitle>
            <CardDescription>Buttons can include icons for better visual communication.</CardDescription>
        </CardHeader>
        <CardContent>
            <div class="flex flex-wrap gap-4">
                <Button>
                    <LucideIcon Name="mail" Size="16" class="mr-2" />
                    Login with Email
                </Button>
                <Button Variant="ButtonVariant.Secondary">
                    <LucideIcon Name="loader-circle" Size="16" class="mr-2 animate-spin" />
                    Please wait
                </Button>
                <Button Variant="ButtonVariant.Outline">
                    <LucideIcon Name="github" Size="16" class="mr-2" />
                    GitHub
                </Button>
                <Button>
                    Next
                    <LucideIcon Name="chevron-right" Size="16" class="ml-2" />
                </Button>
            </div>
        </CardContent>
    </Card>

    <!-- States -->
    <Card>
        <CardHeader>
            <CardTitle>States</CardTitle>
            <CardDescription>Buttons can be disabled or show loading states.</CardDescription>
        </CardHeader>
        <CardContent>
            <div class="flex flex-wrap gap-4">
                <Button Disabled="true">Disabled</Button>
                <Button Variant="ButtonVariant.Outline" Disabled="true">Disabled Outline</Button>
                <Button>
                    <LucideIcon Name="loader-circle" Size="16" class="mr-2 animate-spin" />
                    Loading...
                </Button>
            </div>
        </CardContent>
    </Card>

    <!-- As Link -->
    <Card>
        <CardHeader>
            <CardTitle>As Link</CardTitle>
            <CardDescription>Buttons can be rendered as anchor elements for navigation.</CardDescription>
        </CardHeader>
        <CardContent>
            <div class="flex flex-wrap gap-4">
                <Button AsElement="ButtonElement.Anchor" Href="/">
                    Go Home
                </Button>
                <Button AsElement="ButtonElement.Anchor" Href="https://blazorblueprintui.com" Variant="ButtonVariant.Outline">
                    Visit BlazorBlueprint
                    <LucideIcon Name="external-link" Size="16" class="ml-2" />
                </Button>
            </div>
        </CardContent>
    </Card>
</div>

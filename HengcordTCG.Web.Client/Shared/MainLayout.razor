@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization

<div class="min-h-screen bg-slate-950 text-slate-100 flex flex-col font-sans selection:bg-orange-500/30 selection:text-orange-200">
    <header class="h-16 border-b border-slate-800/50 bg-slate-950/80 backdrop-blur-xl sticky top-0 z-50 flex items-center justify-between px-6">
        <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-gradient-to-br from-orange-500 to-amber-500 rounded-xl flex items-center justify-center shadow-lg shadow-orange-500/20 ring-1 ring-white/20">
                <span class="text-xl font-black text-white italic">H</span>
            </div>
            <div>
                <h1 class="text-lg font-bold tracking-tight bg-gradient-to-r from-white to-slate-400 bg-clip-text text-transparent">HengcordTCG</h1>
                <p class="text-[10px] text-slate-500 uppercase tracking-widest font-semibold">Trading Card Game</p>
            </div>
        </div>
        
        <nav class="hidden md:flex items-center gap-1">
            <NavLink href="/" class="px-4 py-2 text-sm font-medium text-slate-400 hover:text-white hover:bg-white/5 rounded-lg transition-all" ActiveClass="text-orange-400 bg-orange-500/10">
                Dashboard
            </NavLink>
            <NavLink href="/cards" class="px-4 py-2 text-sm font-medium text-slate-400 hover:text-white hover:bg-white/5 rounded-lg transition-all" ActiveClass="text-orange-400 bg-orange-500/10">
                Karty
            </NavLink>
            <NavLink href="/market" class="px-4 py-2 text-sm font-medium text-slate-400 hover:text-white hover:bg-white/5 rounded-lg transition-all" ActiveClass="text-orange-400 bg-orange-500/10">
                Rynek
            </NavLink>
        </nav>

        <div class="flex items-center gap-4">
            <AuthorizeView>
                <Authorized>
                    @{
                        var avatarUrl = context.User.FindFirst("avatar_url")?.Value;
                    }
                    <a href="/logout" class="flex items-center gap-3 pl-4 border-l border-slate-800 group">
                        <div class="text-right">
                            <p class="text-xs font-bold text-white">@context.User.Identity?.Name</p>
                            <span class="text-[10px] text-slate-500 group-hover:text-red-400 transition-colors">Wyloguj siÄ™</span>
                        </div>
                        <div class="w-8 h-8 rounded-full bg-slate-800 border border-slate-700 flex items-center justify-center overflow-hidden group-hover:border-red-500/60 transition-colors">
                            @if (!string.IsNullOrEmpty(avatarUrl))
                            {
                                <img src="@avatarUrl" alt="Avatar" class="w-8 h-8 object-cover" />
                            }
                            else
                            {
                                <BIcon Icon="Lucide.User" Size="Px16" Color="slate-400" />
                            }
                        </div>
                    </a>
                </Authorized>
                <NotAuthorized>
                    <a href="/login" class="flex items-center gap-2 px-4 py-2 bg-indigo-600 hover:bg-indigo-500 text-white text-sm font-semibold rounded-lg transition-all shadow-lg shadow-indigo-600/20">
                        <BIcon Icon="Lucide.LogIn" Size="Px16" />
                        Zaloguj przez Discord
                    </a>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </header>

    <main class="flex-1">
        @Body
    </main>

    <footer class="border-t py-6 md:py-0">
        <div class="container flex flex-col items-center justify-between gap-4 md:h-14 md:flex-row">
            <p class="text-sm text-muted-foreground">
                Built with <a href="https://blazorblueprintui.com" target="_blank" class="font-medium underline underline-offset-4">BlazorBlueprint</a>
            </p>
        </div>
    </footer>
</div>

<ToastProvider Position="ToastPosition.BottomRight" />
<PortalHost />

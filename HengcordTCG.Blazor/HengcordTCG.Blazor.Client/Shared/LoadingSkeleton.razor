@* Loading skeleton placeholder for content that is being fetched *@

<div class="space-y-@Spacing">
    @for (var i = 0; i < Count; i++)
    {
        <div class="skeleton-pulse" style="height: @(Height)px; width: @Width;"></div>
    }
</div>

@code {
    [Parameter] public int Count { get; set; } = 3;
    [Parameter] public int Height { get; set; } = 80;
    [Parameter] public string Width { get; set; } = "100%";
    [Parameter] public int Spacing { get; set; } = 4;
}

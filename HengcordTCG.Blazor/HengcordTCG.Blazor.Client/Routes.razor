@using Microsoft.AspNetCore.Components.Authorization
@inject IJSRuntime JS
@inject NavigationManager Navigation

<CascadingAuthenticationState>
<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(Shared.MainLayout)">
            <NotAuthorized>
                @if (context.User.Identity?.IsAuthenticated != true)
                {
                    <RedirectToLogin />
                }
                else
                {
                    <div class="flex flex-col items-center justify-center min-h-[400px] gap-4">
                        <i class="fa fa-shield-halved text-red-400 text-6xl"></i>
                        <h1 class="text-2xl font-bold text-slate-100">Access Denied</h1>
                        <p class="text-slate-400">You don't have permission to access this page.</p>
                        <a href="/" class="text-amber-400 hover:text-amber-300 underline">Go home</a>
                    </div>
                }
            </NotAuthorized>
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(Shared.MainLayout)">
            <div class="flex flex-col items-center justify-center min-h-[calc(100vh-8rem)] gap-4">
                <div class="w-24 h-24 rounded-full bg-slate-800 flex items-center justify-center">
                    <i class="fa fa-question-circle text-slate-500 text-5xl"></i>
                </div>
                <h1 class="text-4xl font-bold text-slate-100">404</h1>
                <p class="text-slate-400">This page seems to have vanished into the void...</p>
                <a href="/" class="mt-4">
                    <button class="bg-gradient-to-r from-amber-500 to-orange-500 px-4 py-2 rounded-lg text-white font-medium">
                        <i class="fa fa-arrow-left mr-2"></i> Return Home
                    </button>
                </a>
            </div>
        </LayoutView>
    </NotFound>
</Router>
</CascadingAuthenticationState>

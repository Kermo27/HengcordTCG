@if (Show)
{
    <div class="fixed inset-0 bg-black/70 flex items-center justify-center z-50 p-4">
        <div class="bg-slate-900 border border-slate-700 rounded-xl w-full max-w-md">
            <div class="p-6 border-b border-slate-700">
                <h3 class="text-xl font-bold text-white">Edit Gold - @User?.Username</h3>
            </div>
            <div class="p-6 space-y-4">
                <div>
                    <label class="block text-slate-400 text-sm mb-1">Current Gold</label>
                    <p class="text-amber-400 text-2xl font-bold">@User?.Gold.ToString("N0")</p>
                </div>
                <div>
                    <label class="block text-slate-400 text-sm mb-1">New Gold Amount</label>
                    <input type="number" @bind="Amount" @bind:event="oninput" @bind:after="NotifyAmountChanged" class="w-full bg-slate-800 border border-slate-700 rounded-lg px-4 py-2 text-white" />
                </div>
                <div class="flex gap-2">
                    <button @onclick="HandleSetGold" class="flex-1 bg-amber-600 px-4 py-2 rounded-lg text-white">
                        Set Gold
                    </button>
                    <button @onclick="HandleAddGold" class="flex-1 bg-emerald-600 px-4 py-2 rounded-lg text-white">
                        Add Gold
                    </button>
                </div>
            </div>
            <div class="p-6 border-t border-slate-700 flex justify-end">
                <button @onclick="OnClose" class="bg-slate-700 px-4 py-2 rounded-lg text-white">Close</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool Show { get; set; }

    [Parameter]
    public User? User { get; set; }

    [Parameter]
    public int Amount { get; set; }

    [Parameter]
    public EventCallback<int> AmountChanged { get; set; }

    [Parameter]
    public EventCallback OnClose { get; set; }

    [Parameter]
    public EventCallback<int> OnSetGold { get; set; }

    [Parameter]
    public EventCallback<int> OnAddGold { get; set; }

    private async Task NotifyAmountChanged()
    {
        await AmountChanged.InvokeAsync(Amount);
    }

    private async Task HandleSetGold()
    {
        await OnSetGold.InvokeAsync(Amount);
    }

    private async Task HandleAddGold()
    {
        await OnAddGold.InvokeAsync(Amount);
    }
}

@if (Show)
{
    <div class="fixed inset-0 bg-black/70 flex items-center justify-center z-50 p-4">
        <div class="bg-slate-900 border border-slate-700 rounded-xl w-full max-w-6xl max-h-[95vh] overflow-hidden flex flex-col">
            <div class="p-6 border-b border-slate-700 flex justify-between items-center">
                <h3 class="text-xl font-bold text-white">@(_editingPageId != null ? "Edit Wiki Page" : "Create Wiki Page")</h3>
                <button @onclick="OnClose" class="text-slate-400 hover:text-white">
                    <i class="fa fa-times text-xl"></i>
                </button>
            </div>
            
            <div class="p-6 border-b border-slate-700">
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-slate-400 text-sm mb-1">Title</label>
                        <input @bind="Form.Title" class="w-full bg-slate-800 border border-slate-700 rounded-lg px-4 py-2 text-white" />
                    </div>
                    <div>
                        <label class="block text-slate-400 text-sm mb-1">Slug (URL)</label>
                        <input @bind="Form.Slug" class="w-full bg-slate-800 border border-slate-700 rounded-lg px-4 py-2 text-white" placeholder="my-page-slug" />
                    </div>
                </div>
            </div>

            <div class="flex-1 overflow-hidden min-h-[300px]" style="max-height: calc(95vh - 280px);">
                <MarkdownEditor @bind-Value="Form.Content" />
            </div>
            
            <div class="p-6 border-t border-slate-700 flex justify-end gap-3">
                <button @onclick="OnClose" class="bg-slate-700 px-4 py-2 rounded-lg text-white">Cancel</button>
                <button @onclick="OnSave" class="bg-emerald-600 px-4 py-2 rounded-lg text-white">@(_editingPageId != null ? "Save Changes" : "Create Page")</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool Show { get; set; }

    [Parameter]
    public WikiPageFormData Form { get; set; } = new();

    [Parameter]
    public int? EditingPageId { get => _editingPageId; set { _editingPageId = value; } }

    [Parameter]
    public EventCallback OnClose { get; set; }

    [Parameter]
    public EventCallback OnSave { get; set; }

    private int? _editingPageId;
}

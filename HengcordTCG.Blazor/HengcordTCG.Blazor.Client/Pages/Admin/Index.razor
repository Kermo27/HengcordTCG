@page "/admin"
@inject HengcordTCGClient Client

<PageTitle>Admin - HengcordTCG</PageTitle>

<div class="container py-8">
    <h1 class="text-3xl font-bold text-white mb-8">Admin Panel</h1>

    <!-- Tabs -->
    <div class="border-b border-slate-700 mb-6">
        <div class="flex space-x-1">
            <button @onclick="() => Tab = "cards"" class="@TabClass("cards")">
                <i class="fa fa-images mr-2"></i> Cards
            </button>
            <button @onclick="() => Tab = "packs"" class="@TabClass("packs")">
                <i class="fa fa-box mr-2"></i> Packs
            </button>
            <button @onclick="() => Tab = "users"" class="@TabClass("users")">
                <i class="fa fa-users mr-2"></i> Users
            </button>
        </div>
    </div>

    <!-- Cards Tab -->
    @if (Tab == "cards")
    {
        <div class="mb-6 flex justify-between items-center">
            <h2 class="text-xl font-semibold text-white">Manage Cards</h2>
            <button class="bg-emerald-600 px-4 py-2 rounded-lg text-white">
                <i class="fa fa-plus mr-2"></i> Add Card
            </button>
        </div>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            @foreach (var card in Cards)
            {
                <div class="bg-slate-900/50 border border-slate-800 rounded-xl overflow-hidden">
                    <div class="aspect-[3/4] bg-slate-800">
                        @if (!string.IsNullOrEmpty(card.ImagePath))
                        {
                            <img src="/api/images/@card.ImagePath" class="w-full h-full object-cover">
                        }
                    </div>
                    <div class="p-3">
                        <p class="text-white font-medium truncate">@card.Name</p>
                        <p class="text-slate-400 text-sm">@card.CardType</p>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Packs Tab -->
    @if (Tab == "packs")
    {
        <div class="mb-6 flex justify-between items-center">
            <h2 class="text-xl font-semibold text-white">Manage Packs</h2>
            <button class="bg-emerald-600 px-4 py-2 rounded-lg text-white">
                <i class="fa fa-plus mr-2"></i> Add Pack
            </button>
        </div>
        <div class="grid md:grid-cols-3 gap-6">
            @foreach (var pack in Packs)
            {
                <div class="bg-slate-900/50 border border-slate-800 rounded-xl p-6">
                    <h3 class="text-lg font-semibold text-white mb-2">@pack.Name</h3>
                    <p class="text-amber-400 font-bold mb-2">@pack.Price Gold</p>
                    <button class="w-full bg-slate-700 px-4 py-2 rounded-lg text-white">
                        <i class="fa fa-edit mr-2"></i> Edit
                    </button>
                </div>
            }
        </div>
    }

    <!-- Users Tab -->
    @if (Tab == "users")
    {
        <h2 class="text-xl font-semibold text-white mb-6">User Management</h2>
        <div class="bg-slate-900/50 border border-slate-800 rounded-xl overflow-hidden">
            <table class="w-full">
                <thead class="bg-slate-800">
                    <tr>
                        <th class="px-4 py-3 text-left text-slate-400">User</th>
                        <th class="px-4 py-3 text-left text-slate-400">Gold</th>
                        <th class="px-4 py-3 text-left text-slate-400">Admin</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-800">
                    @foreach (var user in Users)
                    {
                        <tr class="hover:bg-slate-800">
                            <td class="px-4 py-3 text-white">@user.Username</td>
                            <td class="px-4 py-3 text-amber-400">@user.Gold.ToString("N0")</td>
                            <td class="px-4 py-3">
                                @if (user.IsBotAdmin)
                                {
                                    <span class="text-amber-400">Yes</span>
                                }
                                else
                                {
                                    <span class="text-slate-500">No</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private string Tab = "cards";
    private List<Card> Cards = new();
    private List<PackType> Packs = new();
    private List<User> Users = new();

    protected override async Task OnInitializedAsync()
    {
        Cards = await Client.GetCardsAsync();
        Packs = await Client.GetPacksAsync();
        Users = await Client.GetUsersAsync();
    }

    private string TabClass(string tab) => Tab == tab
        ? "px-4 py-2 border-b-2 border-amber-500 text-amber-400 font-medium"
        : "px-4 py-2 text-slate-400 hover:text-white transition-colors";
}

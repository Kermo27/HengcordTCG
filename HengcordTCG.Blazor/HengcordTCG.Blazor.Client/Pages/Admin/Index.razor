        CardType.Unit => "âš”ï¸",
        CardType.Closer => "ðŸŽ¯",
        _ => ""
    };

    private void OpenAddCard() { }
    private void OpenEditCard(ModelCard card) { }
    private Task DeleteCard(ModelCard card) => Task.CompletedTask;

    private void EditPack(PackType pack) { }
    private Task TogglePack(PackType pack) => Task.CompletedTask;

    private void OpenGiveGold(User user) { }
    private void OpenGiveCard(User user) { }
    private Task ToggleAdmin(User user) => Task.CompletedTask;

    private Task FixInventory() => Task.CompletedTask;

    private void OpenAddWikiPage() { }
}

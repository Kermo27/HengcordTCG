    private async Task GiveGold()
    {
        if (SelectedUser == null) return;
        var amount = int.TryParse(GoldAmountStr, out var a) ? a : 0;
        if (amount <= 0) { Toast.Error("Invalid amount"); return; }

        var result = await Client.GiveGoldAdminAsync(SelectedUser.DiscordId, amount);
        if (result >= 0)
        {
            Toast.Success($"Gave {amount} gold to {SelectedUser.Username}! New balance: {result:N0}");
            ShowGiveGoldDialog = false;
            await LoadData();
        }
        else
        {
            Toast.Error("Failed to give gold");
        }
    }

    private void OpenGiveCard(User user)
    {
        SelectedUser = user;
        CardAmountStr = "1";
        SelectedCardName = AllCards.FirstOrDefault()?.Name ?? "";
        ShowGiveCardDialog = true;
    }

    private async Task GiveCard()
    {
        if (SelectedUser == null || string.IsNullOrEmpty(SelectedCardName)) return;
        var amount = int.TryParse(CardAmountStr, out var a) ? a : 1;

        var success = await Client.GiveCardAsync(SelectedUser.DiscordId, SelectedCardName, amount);
        if (success)
        {
            Toast.Success($"Gave {amount}x {SelectedCardName} to {SelectedUser.Username}!");
            ShowGiveCardDialog = false;
        }
        else
        {
            Toast.Error("Failed to give card");
        }
    }

    private async Task ToggleAdmin(User user)
    {
        bool success;
        if (user.IsBotAdmin)
        {
            success = await Client.RemoveAdminAsync(user.DiscordId);
        }
        else
        {
            success = await Client.AddAdminAsync(user.DiscordId);
        }

        if (success)
        {
            Toast.Success(user.IsBotAdmin ? $"Removed admin from {user.Username}" : $"Made {user.Username} an admin");
            await LoadData();
        }
        else
        {
            Toast.Error("Failed to toggle admin status");
        }
    }


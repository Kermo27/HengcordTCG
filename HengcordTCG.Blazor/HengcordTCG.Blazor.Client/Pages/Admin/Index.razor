    private async Task SaveWikiPage()
    {
        if (string.IsNullOrWhiteSpace(EditingWikiPageTitle))
        {
            Toast.Error("Title is required");
            return;
        }

        if (string.IsNullOrWhiteSpace(EditingWikiPageSlug))
        {
            EditingWikiPageSlug = EditingWikiPageTitle.ToLowerInvariant()
                .Replace(" ", "-")
                .Replace("ƒÖ", "a").Replace("ƒá", "c").Replace("ƒô", "e")
                .Replace("≈Ç", "l").Replace("≈Ñ", "n").Replace("√≥", "o")
                .Replace("≈õ", "s").Replace("≈∫", "z").Replace("≈º", "z");
        }

        IsSavingWiki = true;
        StateHasChanged();

        try
        {
            var order = int.TryParse(EditingWikiPageOrderStr, out var o) ? o : 0;

            if (IsEditingWikiPage)
            {
                await WikiService.UpdatePageAsync(EditingWikiPageId, new UpdateWikiPageRequest
                {
                    Title = EditingWikiPageTitle,
                    Slug = EditingWikiPageSlug,
                    Content = EditingWikiPageContent,
                    ParentId = EditingWikiPageParentId,
                    Order = order
                });
                Toast.Success("Wiki page updated!");
            }
            else
            {
                await WikiService.CreatePageAsync(new CreateWikiPageRequest
                {
                    Title = EditingWikiPageTitle,
                    Slug = EditingWikiPageSlug,
                    Content = EditingWikiPageContent,
                    ParentId = EditingWikiPageParentId,
                    Order = order
                });
                Toast.Success("Wiki page created!");
            }

            ShowWikiDialog = false;
            await LoadWikiData();
        }
        catch (Exception ex)
        {
            Toast.Error($"Failed to save wiki page: {ex.Message}");
        }
        finally
        {
            IsSavingWiki = false;
        }
    }


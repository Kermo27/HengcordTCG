    private void BuildFlatWikiPages(List<WikiPageItem> items, int depth)
    {
        foreach (var item in items.OrderBy(p => p.Order))
        {
            FlatWikiPages.Add(new FlatWikiPage
            {
                Id = item.Id,
                Title = item.Title,
                Slug = item.Slug,
                ParentId = item.ParentId,
                Order = item.Order,
                Depth = depth
            });
            var children = WikiPages.Where(p => p.ParentId == item.Id).ToList();
            if (children.Count > 0)
            {
                BuildFlatWikiPages(children, depth + 1);
            }
        }
    }


@page "/admin"
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using ModelCard = HengcordTCG.Shared.Models.Card
@using HengcordTCG.Shared.Models
@inject HengcordTCGClient Client
@inject AuthService AuthService
@inject ToastService Toast
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Admin Panel - HengcordTCG</PageTitle>

<div class="container py-8">
    <!-- Header -->
    <div class="flex items-center gap-3 mb-8">
        <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-amber-500 to-orange-600 flex items-center justify-center">
            <LucideIcon Name="shield" Size="28" class="text-white" />
        </div>
        <div>
            <h1 class="text-3xl font-bold text-slate-100">Admin Panel</h1>
            <p class="text-slate-400">Manage cards, packs, users, and battles</p>
        </div>
    </div>

    <!-- Admin Tabs -->
    <Tabs @bind-Value="ActiveTab" class="w-full">
        <TabsList class="bg-slate-900 border border-slate-800">
            <TabsTrigger Value="cards" class="data-[state=active]:bg-slate-800">
                <LucideIcon Name="images" Size="16" class="mr-2" />
                Cards
            </TabsTrigger>
            <TabsTrigger Value="packs" class="data-[state=active]:bg-slate-800">
                <LucideIcon Name="package" Size="16" class="mr-2" />
                Packs
            </TabsTrigger>
            <TabsTrigger Value="users" class="data-[state=active]:bg-slate-800">
                <LucideIcon Name="users" Size="16" class="mr-2" />
                Users
            </TabsTrigger>
            <TabsTrigger Value="battles" class="data-[state=active]:bg-slate-800">
                <LucideIcon Name="swords" Size="16" class="mr-2" />
                Battles
            </TabsTrigger>
            <TabsTrigger Value="tools" class="data-[state=active]:bg-slate-800">
                <LucideIcon Name="wrench" Size="16" class="mr-2" />
                Tools
            </TabsTrigger>
        </TabsList>

        <!-- Cards Tab -->
        <TabsContent Value="cards" class="mt-6 space-y-6">
            <div class="flex justify-between items-center">
                <h2 class="text-xl font-semibold text-slate-100">Manage Cards</h2>
                <Button @onclick="OpenAddCard" class="bg-emerald-500 hover:bg-emerald-600">
                    <LucideIcon Name="plus" Size="18" class="mr-2" />
                    Add Card
                </Button>
            </div>

            <!-- Card Type Filter -->
            <div class="flex gap-2">
                <Button @onclick="() => CardFilter = null"
                    Variant="@(CardFilter == null ? ButtonVariant.Default : ButtonVariant.Outline)"
                    class="@(CardFilter == null ? "bg-slate-700" : "border-slate-700")">
                    All (@AllCards.Count)
                </Button>
                @foreach (var type in Enum.GetValues<CardType>())
                {
                    var t = type;
                    <Button @onclick="() => CardFilter = t"
                        Variant="@(CardFilter == t ? ButtonVariant.Default : ButtonVariant.Outline)"
                        class="@(CardFilter == t ? GetCardTypeColor(t) : "border-slate-700")">
                        @GetCardTypeIcon(t) @t (@AllCards.Count(c => c.CardType == t))
                    </Button>
                }
            </div>

            @if (IsLoading)
            {
                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                    @for (int i = 0; i < 8; i++)
                    {
                        <Skeleton class="aspect-[3/4] rounded-lg" />
                    }
                </div>
            }
            else
            {
                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
                    @foreach (var card in FilteredCards)
                    {
                        <div class="relative group">
                            <CardComponent Card="card" />
                            <div class="absolute top-2 left-2">
                                <Badge class="@GetCardTypeBadgeClass(card.CardType)">
                                    @GetCardTypeIcon(card.CardType) @card.CardType
                                </Badge>
                            </div>
                            <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity rounded-xl flex items-center justify-center gap-2">
                                <Button @onclick="() => OpenEditCard(card)" Size="ButtonSize.Icon" Variant="ButtonVariant.Secondary">
                                    <LucideIcon Name="pencil" Size="16" />
                                </Button>
                                <Button @onclick="() => DeleteCard(card)" Size="ButtonSize.Icon" Variant="ButtonVariant.Destructive">
                                    <LucideIcon Name="trash-2" Size="16" />
                                </Button>
                            </div>
                        </div>
                    }
                </div>
            }
        </TabsContent>

        <!-- Packs Tab -->
        <TabsContent Value="packs" class="mt-6 space-y-6">
            <div class="flex justify-between items-center">
                <h2 class="text-xl font-semibold text-slate-100">Manage Packs</h2>
                <Button @onclick="() => ShowAddPack = true" class="bg-emerald-500 hover:bg-emerald-600">
                    <LucideIcon Name="plus" Size="18" class="mr-2" />
                    Add Pack
                </Button>
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var pack in AllPacks)
                {
                    <Card class="border-slate-800 bg-slate-900/50">
                        <CardHeader>
                            <div class="flex items-start justify-between">
                                <div>
                                    <CardTitle class="text-slate-100">@pack.Name</CardTitle>
                                    <CardDescription class="text-slate-400">
                                        @(pack.IsAvailable ? "Available" : "Unavailable")
                                    </CardDescription>
                                </div>
                                <Badge Variant="BadgeVariant.Outline" 
                                    class="@(pack.IsAvailable ? "border-emerald-500 text-emerald-400" : "border-slate-500 text-slate-400")">
                                    @(pack.IsAvailable ? "Active" : "Inactive")
                                </Badge>
                            </div>
                        </CardHeader>
                        <CardContent>
                            <div class="space-y-2 text-sm">
                                <div class="flex justify-between">
                                    <span class="text-slate-500">Price</span>
                                    <span class="text-amber-400 font-semibold">@pack.Price.ToString("N0") Gold</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-slate-500">Legendary</span>
                                    <span class="text-amber-400">@pack.ChanceLegendary%</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-slate-500">Rare</span>
                                    <span class="text-purple-400">@pack.ChanceRare%</span>
                                </div>
                                <div class="flex justify-between">
                                    <span class="text-slate-500">Common</span>
                                    <span class="text-slate-400">@pack.ChanceCommon%</span>
                                </div>
                            </div>
                        </CardContent>
                        <CardFooter class="flex gap-2">
                            <Button @onclick="() => TogglePack(pack)" Variant="ButtonVariant.Outline" class="flex-1 justify-start border-slate-700">
                                @(pack.IsAvailable ? "Disable" : "Enable")
                            </Button>
                            <Button @onclick="() => EditPack(pack)" Size="ButtonSize.Icon" Variant="ButtonVariant.Secondary">
                                <LucideIcon Name="pencil" Size="16" />
                            </Button>
                        </CardFooter>
                    </Card>
                }
            </div>
        </TabsContent>

        <!-- Users Tab -->
        <TabsContent Value="users" class="mt-6 space-y-6">
            <div class="flex justify-between items-center">
                <h2 class="text-xl font-semibold text-slate-100">User Management</h2>
                <div class="flex gap-2">
                    <div class="relative">
                        <LucideIcon Name="search" Size="16" class="absolute left-3 top-1/2 -translate-y-1/2 text-slate-500" />
                        <Input @bind-Value="UserSearch" Placeholder="Search users..." class="pl-10 bg-slate-950 border-slate-700 w-64" />
                    </div>
                </div>
            </div>

            <Card class="border-slate-800 bg-slate-900/50">
                <CardContent class="p-0">
                    <div class="divide-y divide-slate-800">
                        @foreach (var user in FilteredUsers)
                        {
                            <div class="flex items-center justify-between p-4 hover:bg-slate-800/50">
                                <div class="flex items-center gap-3">
                                    <div class="w-10 h-10 rounded-full bg-gradient-to-br from-indigo-500 to-purple-500 flex items-center justify-center text-white font-semibold">
                                        @(user.Username?.FirstOrDefault().ToString().ToUpper() ?? "U")
                                    </div>
                                    <div>
                                        <div class="font-medium text-slate-200">@user.Username</div>
                                        <div class="text-sm text-slate-500">ID: @user.DiscordId</div>
                                    </div>
                                </div>
                                <div class="flex items-center gap-4">
                                    <div class="text-right">
                                        <div class="text-amber-400 font-semibold">@user.Gold.ToString("N0") Gold</div>
                                        @if (user.IsBotAdmin)
                                        {
                                            <Badge Variant="BadgeVariant.Outline" class="border-amber-500 text-amber-400">Admin</Badge>
                                        }
                                    </div>
                                    <DropdownMenu>
                                        <DropdownMenuTrigger>
                                            <Button Size="ButtonSize.Icon" Variant="ButtonVariant.Ghost">
                                                <LucideIcon Name="more-vertical" Size="16" />
                                            </Button>
                                        </DropdownMenuTrigger>
                                        <DropdownMenuContent>
                                            <DropdownMenuItem @onclick="() => OpenGiveGold(user)">
                                                <LucideIcon Name="coins" Size="16" class="mr-2" />
                                                Give Gold
                                            </DropdownMenuItem>
                                            <DropdownMenuItem @onclick="() => OpenGiveCard(user)">
                                                <LucideIcon Name="image" Size="16" class="mr-2" />
                                                Give Card
                                            </DropdownMenuItem>
                                            <DropdownMenuSeparator />
                                            <DropdownMenuItem @onclick="() => ToggleAdmin(user)" class="@(user.IsBotAdmin ? "text-red-400" : "text-emerald-400")">
                                                <LucideIcon Name="@(user.IsBotAdmin ? "user-minus" : "user-plus")" Size="16" class="mr-2" />
                                                @(user.IsBotAdmin ? "Remove Admin" : "Make Admin")
                                            </DropdownMenuItem>
                                        </DropdownMenuContent>
                                    </DropdownMenu>
                                </div>
                            </div>
                        }
                    </div>
                </CardContent>
            </Card>
        </TabsContent>

        <!-- Battles Tab -->
        <TabsContent Value="battles" class="mt-6 space-y-6">
            <h2 class="text-xl font-semibold text-slate-100">Battle Leaderboard</h2>

            @if (Leaderboard.Count == 0)
            {
                <Card class="border-slate-800 bg-slate-900/50">
                    <CardContent class="p-8 text-center">
                        <LucideIcon Name="swords" Size="48" class="mx-auto mb-4 text-slate-600" />
                        <p class="text-slate-400">No battles played yet.</p>
                    </CardContent>
                </Card>
            }
            else
            {
                <Card class="border-slate-800 bg-slate-900/50">
                    <CardContent class="p-0">
                        <div class="divide-y divide-slate-800">
                            @for (int i = 0; i < Leaderboard.Count; i++)
                            {
                                var entry = Leaderboard[i];
                                var rank = i;
                                <div class="flex items-center justify-between p-4 hover:bg-slate-800/50">
                                    <div class="flex items-center gap-3">
                                        <div class="w-10 h-10 rounded-full flex items-center justify-center font-bold text-lg @GetRankClass(rank)">
                                            @GetRankDisplay(rank)
                                        </div>
                                        <div>
                                            <div class="font-medium text-slate-200">@entry.Username</div>
                                            <div class="text-sm text-slate-500">@entry.Wins W / @entry.Losses L</div>
                                        </div>
                                    </div>
                                    <div class="text-right">
                                        <div class="font-semibold @(entry.WinRate >= 50 ? "text-emerald-400" : "text-slate-400")">
                                            @entry.WinRate% WR
                                        </div>
                                        <div class="text-xs text-slate-500">@(entry.Wins + entry.Losses) games</div>
                                    </div>
                                </div>
                            }
                        </div>
                    </CardContent>
                </Card>
            }
        </TabsContent>

        <!-- Tools Tab -->
        <TabsContent Value="tools" class="mt-6 space-y-6">
            <h2 class="text-xl font-semibold text-slate-100">Admin Tools</h2>
            
            <div class="grid md:grid-cols-2 gap-6">
                <Card class="border-slate-800 bg-slate-900/50">
                    <CardHeader>
                        <CardTitle class="text-slate-100 flex items-center gap-2">
                            <LucideIcon Name="database" Size="20" class="text-blue-400" />
                            Database Tools
                        </CardTitle>
                        <CardDescription class="text-slate-400">
                            Maintenance and repair tools
                        </CardDescription>
                    </CardHeader>
                    <CardContent class="space-y-3">
                        <Button @onclick="FixInventory" Variant="ButtonVariant.Outline" class="w-full justify-start border-slate-700">
                            <LucideIcon Name="package-check" Size="18" class="mr-2" />
                            Fix Inventory Issues
                        </Button>
                    </CardContent>
                </Card>

                <Card class="border-slate-800 bg-slate-900/50">
                    <CardHeader>
                        <CardTitle class="text-slate-100 flex items-center gap-2">
                            <LucideIcon Name="bar-chart-3" Size="20" class="text-emerald-400" />
                            Statistics
                        </CardTitle>
                        <CardDescription class="text-slate-400">
                            Platform overview
                        </CardDescription>
                    </CardHeader>
                    <CardContent>
                        <div class="grid grid-cols-2 gap-4">
                            <div class="p-3 rounded-lg bg-slate-800 text-center">
                                <div class="text-2xl font-bold text-slate-100">@AllCards.Count</div>
                                <div class="text-xs text-slate-500">Total Cards</div>
                            </div>
                            <div class="p-3 rounded-lg bg-slate-800 text-center">
                                <div class="text-2xl font-bold text-slate-100">@AllPacks.Count</div>
                                <div class="text-xs text-slate-500">Pack Types</div>
                            </div>
                            <div class="p-3 rounded-lg bg-slate-800 text-center">
                                <div class="text-2xl font-bold text-slate-100">@Users.Count</div>
                                <div class="text-xs text-slate-500">Total Users</div>
                            </div>
                            <div class="p-3 rounded-lg bg-slate-800 text-center">
                                <div class="text-2xl font-bold text-slate-100">@Users.Count(u => u.IsBotAdmin)</div>
                                <div class="text-xs text-slate-500">Admins</div>
                            </div>
                        </div>
                    </CardContent>
                </Card>
            </div>
        </TabsContent>
    </Tabs>
</div>

<!-- Add/Edit Card Dialog -->
<Dialog @bind-Open="ShowCardDialog">
    <DialogContent class="max-w-2xl max-h-[90vh] overflow-y-auto">
        <DialogHeader>
            <DialogTitle class="text-slate-100">
                @(IsEditingCard ? "Edit Card" : "Add New Card")
            </DialogTitle>
        </DialogHeader>
        <div class="space-y-4 py-4">
            <!-- Basic Info -->
            <div class="grid grid-cols-2 gap-4">
                <div class="col-span-2">
                    <Label class="text-slate-400">Card Name</Label>
                    <Input @bind-Value="EditingCard.Name" class="mt-1 bg-slate-950 border-slate-700" />
                </div>
                <div>
                    <Label class="text-slate-400">Rarity</Label>
                    <Select @bind-Value="EditingCardRarity" class="mt-1">
                        <SelectItem Value="@nameof(Rarity.Common)">Common</SelectItem>
                        <SelectItem Value="@nameof(Rarity.Rare)">Rare</SelectItem>
                        <SelectItem Value="@nameof(Rarity.Legendary)">Legendary</SelectItem>
                    </Select>
                </div>
                <div>
                    <Label class="text-slate-400">Card Type</Label>
                    <Select @bind-Value="EditingCardType" class="mt-1">
                        <SelectItem Value="@nameof(CardType.Unit)">Unit</SelectItem>
                        <SelectItem Value="@nameof(CardType.Commander)">Commander</SelectItem>
                        <SelectItem Value="@nameof(CardType.Closer)">Closer</SelectItem>
                    </Select>
                </div>
            </div>

            <!-- Image Upload -->
            <div>
                <Label class="text-slate-400">Card Image</Label>
                <div class="mt-1 flex items-center gap-3">
                    <div class="flex-1">
                        <InputFile OnChange="OnImageSelected" Accept=".png,.jpg,.jpeg,.gif,.webp"
                            class="block w-full text-sm text-slate-400 
                                   file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0
                                   file:text-sm file:font-semibold file:bg-slate-800 file:text-slate-200
                                   hover:file:bg-slate-700 file:cursor-pointer" />
                    </div>
                    @if (IsUploading)
                    {
                        <div class="text-sm text-slate-400 flex items-center gap-2">
                            <LucideIcon Name="loader-2" Size="16" class="animate-spin" />
                            Uploading...
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(EditingCard.ImagePath))
                    {
                        <img src="@($"/api/images/{EditingCard.ImagePath}")" alt="Preview"
                             class="w-16 h-16 object-cover rounded-lg border border-slate-700" />
                    }
                </div>
                @if (!string.IsNullOrEmpty(EditingCard.ImagePath))
                {
                    <p class="text-xs text-slate-500 mt-1">@EditingCard.ImagePath</p>
                }
            </div>

            <!-- Collection Stats -->
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <Label class="text-slate-400">Attack</Label>
                    <Input @bind-Value="EditingCardAttackStr" class="mt-1 bg-slate-950 border-slate-700" />
                </div>
                <div>
                    <Label class="text-slate-400">Defense</Label>
                    <Input @bind-Value="EditingCardDefenseStr" class="mt-1 bg-slate-950 border-slate-700" />
                </div>
            </div>

            <!-- Game Stats Section -->
            <div class="border-t border-slate-800 pt-4">
                <h3 class="text-sm font-semibold text-slate-300 mb-3 flex items-center gap-2">
                    <LucideIcon Name="swords" Size="16" class="text-orange-400" />
                    Battle Stats
                </h3>
                <div class="grid grid-cols-3 gap-4">
                    <div>
                        <Label class="text-slate-400">üí° Light Cost</Label>
                        <Input @bind-Value="EditingCardLightCostStr" class="mt-1 bg-slate-950 border-slate-700" />
                    </div>
                    <div>
                        <Label class="text-slate-400">‚ù§Ô∏è Health</Label>
                        <Input @bind-Value="EditingCardHealthStr" class="mt-1 bg-slate-950 border-slate-700" />
                    </div>
                    <div>
                        <Label class="text-slate-400">üé≤ Die Size</Label>
                        <Input @bind-Value="EditingCardDieSizeStr" class="mt-1 bg-slate-950 border-slate-700" />
                    </div>
                    <div>
                        <Label class="text-slate-400">‚ö° Speed</Label>
                        <Input @bind-Value="EditingCardSpeedStr" Placeholder="Commander only" class="mt-1 bg-slate-950 border-slate-700" />
                    </div>
                    <div>
                        <Label class="text-slate-400">üó°Ô∏è Counter-Strike</Label>
                        <Input @bind-Value="EditingCardCounterStrikeStr" Placeholder="Commander only" class="mt-1 bg-slate-950 border-slate-700" />
                    </div>
                </div>
            </div>

            <!-- Ability -->
            <div class="border-t border-slate-800 pt-4">
                <h3 class="text-sm font-semibold text-slate-300 mb-3 flex items-center gap-2">
                    <LucideIcon Name="sparkles" Size="16" class="text-purple-400" />
                    Ability
                </h3>
                <div class="space-y-3">
                    <div>
                        <Label class="text-slate-400">Ability Text</Label>
                        <Input @bind-Value="EditingCard.AbilityText" Placeholder="Human-readable ability description" class="mt-1 bg-slate-950 border-slate-700" />
                    </div>
                    <div>
                        <Label class="text-slate-400">Ability ID</Label>
                        <Input @bind-Value="EditingCard.AbilityId" Placeholder="e.g. heal_on_enter" class="mt-1 bg-slate-950 border-slate-700" />
                    </div>
                </div>
            </div>
        </div>
        <DialogFooter>
            <Button Variant="ButtonVariant.Outline" @onclick="() => ShowCardDialog = false">Cancel</Button>
            <Button @onclick="SaveCard" class="bg-emerald-500 hover:bg-emerald-600" disabled="@IsSaving">
                @if (IsSaving)
                {
                    <LucideIcon Name="loader-2" Size="16" class="mr-2 animate-spin" />
                }
                @(IsEditingCard ? "Save Changes" : "Add Card")
            </Button>
        </DialogFooter>
    </DialogContent>
</Dialog>

<!-- Give Gold Dialog -->
<Dialog @bind-Open="ShowGiveGoldDialog">
    <DialogContent class="max-w-sm">
        <DialogHeader>
            <DialogTitle class="text-slate-100">Give Gold to @SelectedUser?.Username</DialogTitle>
        </DialogHeader>
        <div class="py-4">
            <Label class="text-slate-400">Amount</Label>
            <Input @bind-Value="GoldAmountStr" Placeholder="1000" class="mt-1 bg-slate-950 border-slate-700" />
        </div>
        <DialogFooter>
            <Button Variant="ButtonVariant.Outline" @onclick="() => ShowGiveGoldDialog = false">Cancel</Button>
            <Button @onclick="GiveGold" class="bg-amber-500 hover:bg-amber-600">Give Gold</Button>
        </DialogFooter>
    </DialogContent>
</Dialog>

<!-- Give Card Dialog -->
<Dialog @bind-Open="ShowGiveCardDialog">
    <DialogContent class="max-w-sm">
        <DialogHeader>
            <DialogTitle class="text-slate-100">Give Card to @SelectedUser?.Username</DialogTitle>
        </DialogHeader>
        <div class="py-4 space-y-4">
            <div>
                <Label class="text-slate-400">Card</Label>
                <Select @bind-Value="SelectedCardName" class="mt-1">
                    @foreach (var card in AllCards)
                    {
                        <SelectItem Value="@card.Name">@card.Name (@card.Rarity)</SelectItem>
                    }
                </Select>
            </div>
            <div>
                <Label class="text-slate-400">Amount</Label>
                <Input @bind-Value="CardAmountStr" Placeholder="1" class="mt-1 bg-slate-950 border-slate-700" />
            </div>
        </div>
        <DialogFooter>
            <Button Variant="ButtonVariant.Outline" @onclick="() => ShowGiveCardDialog = false">Cancel</Button>
            <Button @onclick="GiveCard" class="bg-emerald-500 hover:bg-emerald-600">Give Card</Button>
        </DialogFooter>
    </DialogContent>
</Dialog>

@code {
    private string ActiveTab { get; set; } = "cards";
    private bool IsLoading { get; set; } = true;

    private List<ModelCard> AllCards { get; set; } = new();
    private List<PackType> AllPacks { get; set; } = new();
    private List<User> Users { get; set; } = new();
    private List<HengcordTCGClient.LeaderboardEntry> Leaderboard { get; set; } = new();

    // Card dialog
    private bool ShowCardDialog { get; set; }
    private bool IsEditingCard { get; set; }
    private bool IsSaving { get; set; }
    private bool IsUploading { get; set; }
    private ModelCard EditingCard { get; set; } = new() { Name = "" };
    private string EditingCardRarity { get; set; } = "Common";
    private string EditingCardType { get; set; } = "Unit";
    private string EditingCardAttackStr { get; set; } = "50";
    private string EditingCardDefenseStr { get; set; } = "50";
    private string EditingCardLightCostStr { get; set; } = "0";
    private string EditingCardHealthStr { get; set; } = "0";
    private string EditingCardDieSizeStr { get; set; } = "6";
    private string EditingCardSpeedStr { get; set; } = "0";
    private string EditingCardCounterStrikeStr { get; set; } = "0";

    // Card filter
    private CardType? CardFilter { get; set; }
    private IEnumerable<ModelCard> FilteredCards =>
        CardFilter.HasValue ? AllCards.Where(c => c.CardType == CardFilter.Value) : AllCards;

    // Packs
    private bool ShowAddPack { get; set; }

    // Users
    private string UserSearch { get; set; } = "";
    private IEnumerable<User> FilteredUsers =>
        string.IsNullOrWhiteSpace(UserSearch) ? Users :
        Users.Where(u => u.Username?.Contains(UserSearch, StringComparison.OrdinalIgnoreCase) == true ||
                         u.DiscordId.ToString().Contains(UserSearch));

    // User action dialogs
    private bool ShowGiveGoldDialog { get; set; }
    private bool ShowGiveCardDialog { get; set; }
    private User? SelectedUser { get; set; }
    private string GoldAmountStr { get; set; } = "1000";
    private string SelectedCardName { get; set; } = "";

    protected override async Task OnInitializedAsync()
    {
        await AuthService.InitializeAsync();
        
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user.Identity?.IsAuthenticated != true || !user.IsInRole("Admin"))
        {
            Navigation.NavigateTo("/");
            return;
        }
        
        await LoadData();
    }

    private async Task LoadData()
    {
        IsLoading = true;
        try
        {
            var cardsTask = Client.GetCardsAsync();
            var packsTask = Client.GetPacksAsync();
            var usersTask = Client.GetUsersAsync();
            var leaderboardTask = Client.GetLeaderboardAsync(20);

            await Task.WhenAll(cardsTask, packsTask, usersTask, leaderboardTask);

            AllCards = cardsTask.Result;
            AllPacks = packsTask.Result;
            Users = usersTask.Result;
            Leaderboard = leaderboardTask.Result;
        }
        catch
        {
            Toast.Error("Failed to load admin data");
        }
        finally
        {
            IsLoading = false;
        }
    }


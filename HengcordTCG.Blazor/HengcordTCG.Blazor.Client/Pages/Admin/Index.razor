    private async Task OnImageSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file.Size > 10 * 1024 * 1024)
        {
            Toast.Error("File too large (max 10MB)");
            return;
        }

        IsUploading = true;
        StateHasChanged();

        try
        {
            using var stream = file.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024);
            var path = await Client.UploadImageAsync(stream, file.Name);
            if (path != null)
            {
                EditingCard.ImagePath = path;
                Toast.Success("Image uploaded!");
            }
            else
            {
                Toast.Error("Upload failed");
            }
        }
        catch (Exception ex)
        {
            Toast.Error($"Upload error: {ex.Message}");
        }
        finally
        {
            IsUploading = false;
            StateHasChanged();
        }
    }

    private async Task SaveCard()
    {
        if (string.IsNullOrWhiteSpace(EditingCard.Name))
        {
            Toast.Error("Card name is required");
            return;
        }

        IsSaving = true;
        StateHasChanged();

        // Parse string values
        EditingCard.Rarity = Enum.Parse<Rarity>(EditingCardRarity);
        EditingCard.CardType = Enum.Parse<CardType>(EditingCardType);
        EditingCard.Attack = int.TryParse(EditingCardAttackStr, out var atk) ? atk : 50;
        EditingCard.Defense = int.TryParse(EditingCardDefenseStr, out var def) ? def : 50;
        EditingCard.LightCost = int.TryParse(EditingCardLightCostStr, out var lc) ? lc : 0;
        EditingCard.Health = int.TryParse(EditingCardHealthStr, out var hp) ? hp : 0;
        EditingCard.DieSize = int.TryParse(EditingCardDieSizeStr, out var ds) ? ds : 6;
        EditingCard.Speed = int.TryParse(EditingCardSpeedStr, out var spd) ? spd : 0;
        EditingCard.CounterStrike = int.TryParse(EditingCardCounterStrikeStr, out var cs) ? cs : 0;

        bool success;
        if (IsEditingCard)
        {
            success = await Client.UpdateCardAsync(EditingCard);
        }
        else
        {
            success = await Client.AddCardAsync(EditingCard);
        }

        if (success)
        {
            Toast.Success(IsEditingCard ? "Card updated!" : $"Card '{EditingCard.Name}' added!");
            ShowCardDialog = false;
            await LoadData();
        }
        else
        {
            Toast.Error(IsEditingCard ? "Failed to update card" : "Failed to add card");
        }

        IsSaving = false;
    }


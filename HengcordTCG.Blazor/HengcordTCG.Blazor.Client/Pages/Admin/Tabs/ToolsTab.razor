<h2 class="text-xl font-semibold text-slate-100">Admin Tools</h2>

<div class="grid md:grid-cols-2 gap-6">
    <Card class="border-slate-800 bg-slate-900/50">
        <CardHeader>
            <CardTitle class="text-slate-100 flex items-center gap-2">
                <LucideIcon Name="database" Size="20" class="text-blue-400" />
                Database Tools
            </CardTitle>
            <CardDescription class="text-slate-400">
                Maintenance and repair tools
            </CardDescription>
        </CardHeader>
        <CardContent class="space-y-3">
            <Button @onclick="() => OnFixInventory.InvokeAsync()" Variant="ButtonVariant.Outline" class="w-full justify-start border-slate-700">
                <LucideIcon Name="package-check" Size="18" class="mr-2" />
                Fix Inventory Issues
            </Button>
        </CardContent>
    </Card>

    <Card class="border-slate-800 bg-slate-900/50">
        <CardHeader>
            <CardTitle class="text-slate-100 flex items-center gap-2">
                <LucideIcon Name="bar-chart-3" Size="20" class="text-emerald-400" />
                Statistics
            </CardTitle>
            <CardDescription class="text-slate-400">
                Platform overview
            </CardDescription>
        </CardHeader>
        <CardContent>
            <div class="grid grid-cols-2 gap-4">
                <div class="p-3 rounded-lg bg-slate-800 text-center">
                    <div class="text-2xl font-bold text-slate-100">@CardCount</div>
                    <div class="text-xs text-slate-500">Total Cards</div>
                </div>
                <div class="p-3 rounded-lg bg-slate-800 text-center">
                    <div class="text-2xl font-bold text-slate-100">@PackCount</div>
                    <div class="text-xs text-slate-500">Pack Types</div>
                </div>
                <div class="p-3 rounded-lg bg-slate-800 text-center">
                    <div class="text-2xl font-bold text-slate-100">@UserCount</div>
                    <div class="text-xs text-slate-500">Total Users</div>
                </div>
                <div class="p-3 rounded-lg bg-slate-800 text-center">
                    <div class="text-2xl font-bold text-slate-100">@AdminCount</div>
                    <div class="text-xs text-slate-500">Admins</div>
                </div>
            </div>
        </CardContent>
    </Card>
</div>

@code {
    [Parameter] public int CardCount { get; set; }
    [Parameter] public int PackCount { get; set; }
    [Parameter] public int UserCount { get; set; }
    [Parameter] public int AdminCount { get; set; }
    [Parameter] public EventCallback OnFixInventory { get; set; }
}

@page "/login"
@inject AuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Login - HengcordTCG</PageTitle>

<div class="min-h-[calc(100vh-4rem)] flex items-center justify-center p-4">
    <div class="w-full max-w-md bg-slate-900/50 border border-slate-800 rounded-xl p-8 text-center">
        <div class="mx-auto w-20 h-20 rounded-full bg-gradient-to-br from-indigo-500 to-purple-500 flex items-center justify-center mb-6">
            <i class="fa fa-sparkles text-white text-3xl"></i>
        </div>
        
        <h1 class="text-2xl font-bold text-white mb-2">Welcome to HengcordTCG</h1>
        <p class="text-slate-400 mb-6">Sign in to collect, trade, and battle!</p>
        
        <button @onclick="Login" class="w-full bg-gradient-to-r from-indigo-500 to-purple-500 hover:from-indigo-600 hover:to-purple-600 text-white font-medium py-3 rounded-lg">
            <i class="fa fa-discord mr-2"></i> Login with Discord
        </button>
    </div>
</div>

@code {
    private void Login()
    {
        var loginUrl = AuthService.GetDiscordLoginUrl();
        Navigation.NavigateTo(loginUrl, forceLoad: true);
    }
}

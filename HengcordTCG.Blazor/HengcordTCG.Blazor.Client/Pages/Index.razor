@page "/"
@inject HengcordTCGClient Client
@inject AuthService AuthService
@inject NavigationManager Navigation
@implements IDisposable

<PageTitle>Home - HengcordTCG</PageTitle>

<div class="min-h-[calc(100vh-8rem)]">
    <!-- Hero Section -->
    <div class="relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950"></div>
        <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-amber-500/10 via-transparent to-transparent"></div>
        
        <div class="relative container py-16 md:py-24">
            <div class="text-center space-y-6 max-w-3xl mx-auto">
                <TcgBadge Variant="outline">
                    <i class="fa fa-sparkles mr-1"></i> Trading Card Game
                </TcgBadge>
                
                <h1 class="text-5xl md:text-7xl font-bold tracking-tight">
                    <span class="bg-gradient-to-r from-amber-400 via-orange-400 to-purple-500 bg-clip-text text-transparent">
                        Collect, Trade
                    </span>
                    <br />
                    <span class="text-slate-100">& Conquer</span>
                </h1>
                
                <p class="text-lg md:text-xl text-slate-400 max-w-2xl mx-auto">
                    Build your ultimate card collection, trade with other players, and become the most powerful card master in the realm.
                </p>

                <AuthorizeView>
                    <Authorized>
                        <!-- Daily Reward Section -->
                        <div class="bg-slate-900/80 border border-slate-700 rounded-xl p-6 max-w-md mx-auto">
                            @if (IsLoading)
                            {
                                <!-- Skeleton -->
                                <div class="animate-pulse">
                                    <div class="flex items-center justify-between mb-4">
                                        <div class="h-5 w-28 bg-slate-700 rounded"></div>
                                        <div class="h-5 w-20 bg-slate-700 rounded"></div>
                                    </div>
                                    <div class="h-12 bg-slate-700 rounded-lg"></div>
                                </div>
                            }
                            else
                            {
                                <div class="flex items-center justify-between mb-4">
                                    <span class="text-slate-300 font-medium">Daily Reward</span>
                                    <span class="text-amber-400 font-bold"><i class="fa fa-coins mr-1"></i>@Gold.ToString("N0")</span>
                                </div>
                                
                                @if (CanClaimDaily)
                                {
                                    <button @onclick="ClaimDaily" 
                                        disabled="@IsClaimingDaily"
                                        class="w-full bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-600 hover:to-orange-600 text-white font-medium py-3 rounded-lg disabled:opacity-50 transition-all">
                                        @if (IsClaimingDaily)
                                        {
                                            <i class="fa fa-spinner fa-spin mr-2"></i>
                                        }
                                        else
                                        {
                                            <i class="fa fa-gift mr-2"></i>
                                        }
                                        Claim Reward
                                    </button>
                                }
                                else
                                {
                                    <div class="text-center py-3 bg-slate-800/50 rounded-lg">
                                        <span class="text-slate-400">Next reward in: </span>
                                        <span class="text-amber-400 font-mono">@TimeUntilDaily</span>
                                    </div>
                                }
                                
                                @if (!string.IsNullOrEmpty(DailyMessage))
                                {
                                    <p class="mt-3 text-sm @(DailySuccess ? "text-emerald-400" : "text-red-400")">@DailyMessage</p>
                                }
                            }
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <div class="flex flex-col sm:flex-row gap-4 justify-center pt-4">
                            <a href="/collection" class="h-12 px-8 text-lg bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-600 hover:to-orange-600 rounded-lg font-medium inline-flex items-center justify-center">
                                <i class="fa fa-layer-group mr-2"></i> View Collection
                            </a>
                            <a href="/shop" class="h-12 px-8 text-lg border border-slate-700 text-slate-300 hover:bg-slate-800 rounded-lg font-medium inline-flex items-center justify-center">
                                <i class="fa fa-shopping-bag mr-2"></i> Visit Shop
                            </a>
                        </div>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>
    </div>

    <!-- Global Stats -->
    <div class="container py-12">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            @if (IsStatsLoading)
            {
                @for (var i = 0; i < 4; i++)
                {
                    <div class="bg-slate-900/50 border border-slate-800 rounded-xl p-6 text-center animate-pulse">
                        <div class="h-10 w-16 bg-slate-700 rounded mx-auto mb-2"></div>
                        <div class="h-4 w-20 bg-slate-700 rounded mx-auto"></div>
                    </div>
                }
            }
            else
            {
                <div class="bg-slate-900/50 border border-slate-800 rounded-xl p-6 text-center">
                    <div class="text-3xl md:text-4xl font-bold text-amber-400 mb-1">
                        <AnimatedCounter TargetValue="@Stats.TotalCards" />
                    </div>
                    <div class="text-slate-400 text-sm md:text-base"><i class="fa fa-layer-group mr-1"></i> Cards</div>
                </div>
                <div class="bg-slate-900/50 border border-slate-800 rounded-xl p-6 text-center">
                    <div class="text-3xl md:text-4xl font-bold text-purple-400 mb-1">
                        <AnimatedCounter TargetValue="@Stats.TotalPacks" />
                    </div>
                    <div class="text-slate-400 text-sm md:text-base"><i class="fa fa-box mr-1"></i> Packs</div>
                </div>
                <div class="bg-slate-900/50 border border-slate-800 rounded-xl p-6 text-center">
                    <div class="text-3xl md:text-4xl font-bold text-emerald-400 mb-1">
                        <AnimatedCounter TargetValue="@Stats.TotalTrades" />
                    </div>
                    <div class="text-slate-400 text-sm md:text-base"><i class="fa fa-arrow-right-arrow-left mr-1"></i> Trades</div>
                </div>
                <div class="bg-slate-900/50 border border-slate-800 rounded-xl p-6 text-center">
                    <div class="text-3xl md:text-4xl font-bold text-blue-400 mb-1">
                        <AnimatedCounter TargetValue="@Stats.TotalPlayers" />
                    </div>
                    <div class="text-slate-400 text-sm md:text-base"><i class="fa fa-users mr-1"></i> Players</div>
                </div>
            }
        </div>
    </div>

    <!-- Leaderboard -->
    @if (Leaderboard.Any())
    {
        <div class="container pb-12">
            <h2 class="text-2xl font-bold text-white mb-6"><i class="fa fa-trophy text-amber-400 mr-2"></i>Top Players</h2>
            <div class="bg-slate-900/50 border border-slate-800 rounded-xl overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-slate-800/50">
                            <tr>
                                <th class="px-4 py-3 text-left text-sm font-medium text-slate-400">#</th>
                                <th class="px-4 py-3 text-left text-sm font-medium text-slate-400">Player</th>
                                <th class="px-4 py-3 text-center text-sm font-medium text-slate-400">Wins</th>
                                <th class="px-4 py-3 text-center text-sm font-medium text-slate-400">Losses</th>
                                <th class="px-4 py-3 text-center text-sm font-medium text-slate-400">Win Rate</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-800">
                            @foreach (var (player, index) in Leaderboard.Select((p, i) => (p, i)))
                            {
                                <tr class="hover:bg-slate-800/30 transition-colors">
                                    <td class="px-4 py-3">
                                        @if (index == 0)
                                        {
                                            <span class="text-amber-400 font-bold"><i class="fa fa-crown mr-1"></i>1</span>
                                        }
                                        else if (index == 1)
                                        {
                                            <span class="text-slate-300 font-bold">2</span>
                                        }
                                        else if (index == 2)
                                        {
                                            <span class="text-amber-700 font-bold">3</span>
                                        }
                                        else
                                        {
                                            <span class="text-slate-500">@(index + 1)</span>
                                        }
                                    </td>
                                    <td class="px-4 py-3 text-white font-medium">@player.Username</td>
                                    <td class="px-4 py-3 text-center text-emerald-400">@player.Wins</td>
                                    <td class="px-4 py-3 text-center text-red-400">@player.Losses</td>
                                    <td class="px-4 py-3 text-center">
                                        <span class="@(player.WinRate >= 50 ? "text-emerald-400" : "text-red-400")">@player.WinRate.ToString("0.0")%</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <!-- Personal Stats (for logged in users) -->
    <AuthorizeView>
        <Authorized>
            <div class="container pb-12">
                <h2 class="text-2xl font-bold text-white mb-6"><i class="fa fa-user text-purple-400 mr-2"></i>Your Stats</h2>
                <div class="grid md:grid-cols-3 gap-4">
                    <div class="bg-slate-900/50 border border-slate-800 rounded-xl p-6">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 rounded-full bg-amber-500/20 flex items-center justify-center">
                                <i class="fa fa-coins text-amber-400"></i>
                            </div>
                            <div>
                                <div class="text-2xl font-bold text-white">@Gold.ToString("N0")</div>
                                <div class="text-sm text-slate-400">Gold</div>
                            </div>
                        </div>
                    </div>
                    <div class="bg-slate-900/50 border border-slate-800 rounded-xl p-6">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 rounded-full bg-purple-500/20 flex items-center justify-center">
                                <i class="fa fa-layer-group text-purple-400"></i>
                            </div>
                            <div>
                                <div class="text-2xl font-bold text-white">@CollectionCount</div>
                                <div class="text-sm text-slate-400">Cards in Collection</div>
                            </div>
                        </div>
                    </div>
                    <div class="bg-slate-900/50 border border-slate-800 rounded-xl p-6">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 rounded-full bg-emerald-500/20 flex items-center justify-center">
                                <i class="fa fa-trophy text-emerald-400"></i>
                            </div>
                            <div>
                                <div class="text-2xl font-bold text-white">@PlayerStats?.Wins/@PlayerStats?.TotalGames</div>
                                <div class="text-sm text-slate-400">Matches Won</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </Authorized>
    </AuthorizeView>

    <!-- Features -->
    <div class="container py-16">
        <div class="grid md:grid-cols-3 gap-6">
            <div class="bg-slate-900/50 border border-slate-800 rounded-xl p-6 text-center">
                <div class="w-12 h-12 rounded-full bg-amber-500/20 flex items-center justify-center mx-auto mb-4">
                    <i class="fa fa-layer-group text-amber-400 text-xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-white mb-2">Build Your Collection</h3>
                <p class="text-slate-400">Open packs, collect rare cards, and complete your set.</p>
            </div>
            
            <div class="bg-slate-900/50 border border-slate-800 rounded-xl p-6 text-center">
                <div class="w-12 h-12 rounded-full bg-purple-500/20 flex items-center justify-center mx-auto mb-4">
                    <i class="fa fa-arrow-right-arrow-left text-purple-400 text-xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-white mb-2">Trade Cards</h3>
                <p class="text-slate-400">Exchange cards with other players to complete your collection.</p>
            </div>
            
            <div class="bg-slate-900/50 border border-slate-800 rounded-xl p-6 text-center">
                <div class="w-12 h-12 rounded-full bg-emerald-500/20 flex items-center justify-center mx-auto mb-4">
                    <i class="fa fa-trophy text-emerald-400 text-xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-white mb-2">Compete & Win</h3>
                <p class="text-slate-400">Battle other players and prove you're the best card master.</p>
            </div>
        </div>
    </div>
</div>

@code {
    private long Gold;
    private DateTime? LastDaily;
    private ulong UserId;
    private HengcordTCGClient.GameStats Stats = new();
    private List<HengcordTCGClient.LeaderboardEntry> Leaderboard = new();
    private HengcordTCGClient.PlayerStatsResponse? PlayerStats;
    private int CollectionCount;

    private bool IsClaimingDaily;
    private bool CanClaimDaily;
    private string TimeUntilDaily = "";
    private string? DailyMessage;
    private bool DailySuccess;
    private bool IsLoading = true;
    private bool IsStatsLoading = true;

    private System.Timers.Timer? _dailyTimer;

    protected override async Task OnInitializedAsync()
    {
        var statsTask = Client.GetStatsAsync();
        var leaderboardTask = Client.GetLeaderboardAsync(5);
        await Task.WhenAll(statsTask, leaderboardTask);
        Stats = await statsTask;
        Leaderboard = await leaderboardTask;
        IsStatsLoading = false;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var user = await AuthService.InitializeAsync();
            if (user != null)
            {
                Gold = user.Gold;
                LastDaily = user.LastDaily;
                UserId = user.Id;

                var collectionTask = Client.GetCollectionAsync(user.Id);
                var playerStatsTask = Client.GetPlayerStatsAsync(user.Id);
                await Task.WhenAll(collectionTask, playerStatsTask);

                var collection = await collectionTask;
                CollectionCount = collection.Count;
                PlayerStats = await playerStatsTask;

                UpdateDailyStatus();
                StartDailyTimer();
                IsLoading = false;
                StateHasChanged();
            }
            else
            {
                IsLoading = false;
                StateHasChanged();
            }
        }
    }

    private void UpdateDailyStatus()
    {
        if (LastDaily == null)
        {
            CanClaimDaily = true;
            TimeUntilDaily = "";
            return;
        }

        var nextDaily = LastDaily.Value.AddHours(HengcordTCG.Shared.GameConstants.DailyCooldownHours);
        var remaining = nextDaily - DateTime.UtcNow;

        if (remaining <= TimeSpan.Zero)
        {
            CanClaimDaily = true;
            TimeUntilDaily = "";
        }
        else
        {
            CanClaimDaily = false;
            TimeUntilDaily = remaining.ToString(@"hh\:mm\:ss");
        }
    }

    private void StartDailyTimer()
    {
        _dailyTimer = new System.Timers.Timer(1000);
        _dailyTimer.Elapsed += (s, e) => InvokeAsync(() =>
        {
            UpdateDailyStatus();
            StateHasChanged();
        });
        _dailyTimer.Start();
    }

    private async Task ClaimDaily()
    {
        IsClaimingDaily = true;
        DailyMessage = null;

        try
        {
            var result = await Client.ClaimDailyWebAsync();

            if (result.Success)
            {
                DailySuccess = true;
                DailyMessage = $"+{result.Amount} gold!";
                Gold += result.Amount;
                LastDaily = DateTime.UtcNow;
                CanClaimDaily = false;
                UpdateDailyStatus();
            }
            else
            {
                DailySuccess = false;
                DailyMessage = result.TimeRemaining ?? "Try again later";
            }
        }
        catch
        {
            DailySuccess = false;
            DailyMessage = "An error occurred";
        }
        finally
        {
            IsClaimingDaily = false;
        }
    }

    public void Dispose()
    {
        _dailyTimer?.Stop();
        _dailyTimer?.Dispose();
    }
}

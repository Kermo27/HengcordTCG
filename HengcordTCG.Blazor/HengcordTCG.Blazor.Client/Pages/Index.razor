@page "/"
@inject HengcordTCGClient Client
@inject AuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Home - HengcordTCG</PageTitle>

<div class="min-h-[calc(100vh-8rem)]">
    <!-- Hero Section -->
    <div class="relative overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950"></div>
        <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-amber-500/10 via-transparent to-transparent"></div>
        
        <div class="relative container py-16 md:py-24">
            <div class="text-center space-y-6 max-w-3xl mx-auto">
                <TcgBadge Variant="outline">
                    <i class="fa fa-sparkles mr-1"></i> Trading Card Game
                </TcgBadge>
                
                <h1 class="text-5xl md:text-7xl font-bold tracking-tight">
                    <span class="bg-gradient-to-r from-amber-400 via-orange-400 to-purple-500 bg-clip-text text-transparent">
                        Collect, Trade
                    </span>
                    <br />
                    <span class="text-slate-100">& Conquer</span>
                </h1>
                
                <p class="text-lg md:text-xl text-slate-400 max-w-2xl mx-auto">
                    Build your ultimate card collection, trade with other players, and become the most powerful card master in the realm.
                </p>
                
                <div class="flex flex-col sm:flex-row gap-4 justify-center pt-4">
                    <a href="/collection" class="h-12 px-8 text-lg bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-600 hover:to-orange-600 rounded-lg font-medium inline-flex items-center justify-center">
                        <i class="fa fa-layer-group mr-2"></i> View Collection
                    </a>
                    <a href="/shop" class="h-12 px-8 text-lg border border-slate-700 text-slate-300 hover:bg-slate-800 rounded-lg font-medium inline-flex items-center justify-center">
                        <i class="fa fa-shopping-bag mr-2"></i> Visit Shop
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Features -->
    <div class="container py-16">
        <div class="grid md:grid-cols-3 gap-6">
            <div class="bg-slate-900/50 border border-slate-800 rounded-xl p-6 text-center">
                <div class="w-12 h-12 rounded-full bg-amber-500/20 flex items-center justify-center mx-auto mb-4">
                    <i class="fa fa-layer-group text-amber-400 text-xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-white mb-2">Build Your Collection</h3>
                <p class="text-slate-400">Open packs, collect rare cards, and complete your set.</p>
            </div>
            
            <div class="bg-slate-900/50 border border-slate-800 rounded-xl p-6 text-center">
                <div class="w-12 h-12 rounded-full bg-purple-500/20 flex items-center justify-center mx-auto mb-4">
                    <i class="fa fa-arrow-right-arrow-left text-purple-400 text-xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-white mb-2">Trade Cards</h3>
                <p class="text-slate-400">Exchange cards with other players to complete your collection.</p>
            </div>
            
            <div class="bg-slate-900/50 border border-slate-800 rounded-xl p-6 text-center">
                <div class="w-12 h-12 rounded-full bg-emerald-500/20 flex items-center justify-center mx-auto mb-4">
                    <i class="fa fa-trophy text-emerald-400 text-xl"></i>
                </div>
                <h3 class="text-xl font-semibold text-white mb-2">Compete & Win</h3>
                <p class="text-slate-400">Battle other players and prove you're the best card master.</p>
            </div>
        </div>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
    }
}
